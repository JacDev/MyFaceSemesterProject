@model UserToReturnWithCounters
@{
    Layout = null;
}

<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-success border-bottom box-shadow mb-3">
    <div class="container">
        <a href="/"><img src="~/images/Logo48px.png" class="rounded"/></a>

        <div class="navbar-collapse collapse d-flex justify-content-center d-flex">
            <ul class="navbar-nav">
                <li class="nav-item flex-fill">
                    <h5>
                        <a class="nav-link text-white text-center" asp-area="" asp-controller="Profile" asp-action="Index"><i class="far fa-id-badge fa-lg px-4"></i></a>
                    </h5>
                </li>
                <li class="nav-item flex-fill">
                    <h5>
                        <a class="nav-link text-white" asp-area="" asp-controller="Friends" asp-action="ShowFriends">
                            <i class="fas fa-users fa-lg px-4">
                                <span class="badge badge-light">
                                    @Model.FriendsCounter
                            </span>
                            </i>
                        </a>
                    </h5>
                </li>
                <li class="nav-item flex-fill">
                    <h5>
                        <a class="nav-link text-white" asp-area="" asp-controller="Message" asp-action="Messages"><i class="far fa-comment-dots fa-lg px-4"></i></a>
                    </h5>
                </li>
                <li class="nav-item flex-fill">
                    <h5>
                        <a class="nav-link text-white" asp-area="" asp-controller="Friends" asp-action="FindFriends"><i class="fas fa-search fa-lg px-4"></i></a>
                    </h5>
                </li>
                <li class="nav-item flex-fill">
                    <h5>
                        <a class="nav-link text-white" asp-area="" asp-controller="Profile" asp-action="Notifications">
                            <i class="fas fa-bell fa-lg px-4">
                                @if (Model.NewNotificationsCounter == 0)
                                {
                                    <span class="badge badge-light" id="notifications">@Model.NewNotificationsCounter</span>
                                }
                                else
                                {
                                    <span class="badge badge-danger" id="notifications">@Model.NewNotificationsCounter</span>
                                }
                            </i>
                        </a>
                    </h5>
                </li>

                <li class="nav-item flex-fill">
                    <div class="btn-group">
                        <h5>
                            <a class="nav-link text-white" asp-controller="Profile" asp-action="Settings"><i class="fas fa-cogs fa-lg pl-4"></i></a>
                        </h5>
                        <a class="nav-link text-dark dropdown-toggle dropdown-toggle-split pr-4" data-toggle="dropdown"></a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="#">My profile</a>
                            <a class="dropdown-item" href="#">Account settings</a>
                        </div>
                    </div>
                </li>
                <li class="nav-item flex-fill">
                    <h5>
                        <a class="nav-link text-white" asp-area="" asp-controller="Profile" asp-action="Logout"><i class="fas fa-sign-out-alt fa-lg px-4"></i></a>
                    </h5>
                </li>
            </ul>
        </div>
    </div>
</nav>

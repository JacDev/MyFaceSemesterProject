@model IEnumerable<NotificationWithBasicFromWhoData>

@{
    ViewData["Title"] = "Notifications";
}

<h1>
    Notifications
    @if (@Model.Count() == 0)
    {
        <span class="badge badge-light">@Model.Count()</span>
    }
    else
    {
        <span class="badge badge-danger">@Model.Count()</span>
    }
</h1>

<table class="table">
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                     <span>Friend Requiest</span>

                </td>
                <td>
                    From <a asp-controller="Profile" asp-action="Profile" asp-route-id="@item.Notification.FromWho" > @item.User.FirstName @item.User.LastName</a>
                </td>
                <td>
                    Do @item.Notification.UserId
                </td>
                <td>
                    Od @item.Notification.FromWho
                </td>
                <td>
                    <a asp-controller="Friends" asp-action="AcceptFriendRequiest" asp-route-notificationId="@item.Notification.Id" asp-route-friendId="@item.Notification.FromWho">Accept</a>
                </td>
            </tr>
        }
    </tbody>
</table>

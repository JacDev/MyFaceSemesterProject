@model ResetPasswordModel
@{
    ViewData["Title"] = "ResetPassword";
}

<h1 class="col-12 text-center">Reset Password</h1>

<hr />
<div class="row">
    <div class="col-12 border p-3 mt-3">
        <form asp-action="ResetPassword" method="post">
            <input type="hidden" asp-for="@Model.ReturnUrl" />
            <input type="hidden" asp-for="@Model.Code" />
            <input type="hidden" asp-for="@Model.UserId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group row">
                <div class="col-3 text-center">
                    <label asp-for="@Model.Password" class="control-label"></label>
                </div>
                <div class="col-6">
                    <input type="password" asp-for="@Model.Password" class="form-control" />
                </div>
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-3 text-center">
                    <label asp-for="@Model.ConfirmPassword" class="control-label"></label>
                </div>
                <div class="col-6">
                    <input type="password" asp-for="@Model.ConfirmPassword" class="form-control" />
                </div>
                <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="btn-group col-6 offset-3">
                    <input type="submit" class="btn btn-success" value="Reset" />
                </div>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


